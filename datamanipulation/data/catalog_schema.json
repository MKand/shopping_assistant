{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "keyPropertyMapping": "id"
      },
      "product_id": {
        "type": "string",
        "retrievable": true
      },
      "title": {
        "type": "string",
        "keyPropertyMapping": "title",
        "retrievable": true,
        "completable": true
      },
      "category": {
        "type": "array",
        "items": {
          "type": "string",
          "keyPropertyMapping": "category",
          "dynamicFacetable": true
        }
      },
      "link": {
        "type": "string",
        "keyPropertyMapping": "uri"
      },
      "description": {
        "type": "string",
        "retrievable": true
      },
      "color": {
        "type": "array",
        "items": {
          "type": "string",
          "dynamicFacetable": true
        }
      },
      "gender": {
        "type": "string",
        "retrievable": "true",
        "searchable": "true",
        "indexable": "true"
      },
      "brand": {
        "type": "string",
        "retrievable": "true",
        "searchable": "true",
        "indexable": "true"
      }
    }
  }